{
  "family": "todo-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${AWS_TASK_EXECUTION_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "lb",
      "image": "PLACEHOLDER_IMAGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        },
        {
          "containerPort": 443,
          "hostPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "cert-storage",
          "containerPath": "/etc/certs",
          "readOnly": true
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/todo",
          "awslogs-region": "ap-east-1",
          "awslogs-stream-prefix": "lb"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "cert-storage",
      "efsVolumeConfiguration": {
        "fileSystemId": "${AWS_EFS_ID}",
        "rootDirectory": "/"
      }
    }
  ]
}
